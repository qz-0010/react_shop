.form
  max-width: 400px

  &__title
    font-weight: 700
    margin-bottom: 25px

  &__row
    margin-bottom: 10px

    &:last-child
      margin-bottom: 0
  
  &__label
    display: inline-block
    cursor: pointer
    
    &_file
      display: flex
      align-items: center
      padding-left: 20px
      width: 120px
      height: 50px
      opacity: .7
      border-radius: 8px
      background: $cPlaceholder

      & > .icon
        font-size: 30px
        color: $cAccent

  &__input
    &_txt
      display: block
      padding: 8px 12px
      outline: none
      border: 1px solid $cPlaceholder
      border-radius: 8px
      color: $cInput

    &_full-width
      width: 100%

  &__footer
    margin-top: 25px