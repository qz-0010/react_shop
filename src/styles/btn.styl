.btn
  padding: 8px 12px
  margin: 0
  outline: none
  border: none
  transition: background .2s ease, color .2s ease
  border-radius: 4px
  cursor: pointer
  font-size: 13px
  letter-spacing: .1em
  line-height: 1
  background: none
  
  // &_sz
  //   &-middle
  
  &_rounded
    border-radius: 50px
    
  &_action
    border: 2px solid $cAccent
    background: $cAccent
    font-weight: 400
    color: #fff
    
    &:hover
      background: transparent
      color: $cAccent    