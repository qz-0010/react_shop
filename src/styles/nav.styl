.nav
  padding: 0 10px
  background: $cNav
  color: #fff
  
  &__list
    font-size: 0
    
  &__item
    display: inline-block
    margin-right: 8px
    
    &:last-child
      margin-right: 0

  &__link
    display: block
    padding: 12px 6px
    transition: background .2s ease
    cursor: pointer
    font-size: 13px
    line-height: 1
    text-decoration: none
    color: #fff
    
    &:hover
      background: $cAccent
      
  &__btn
    cursor: pointer
    font-size: 13px
    line-height: 1

  &__row
    display: flex
    align-items: center
    justify-content: space-between
    
  &__user
    font-size: 0
    
    &-item
      display: inline-block
      vertical-align: middle
      margin-right: 15px

    &-text
      font-size: 14px
      line-height: 1
    